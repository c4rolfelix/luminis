@model Luminis.Models.ViewModels.RecuperarSenhaViewModel

@using Luminis.Models.ViewModels

@{
    ViewData["Title"] = "Recuperar Senha";
}

<div class="container my-5">
    <div class="row g-5 align-items-center justify-content-center">

        @* Coluna do Formulário (Esquerda) *@
        <div class="col-lg-6 col-md-10">
            <h2 class="text-center mb-4">Recuperar Senha</h2>
            <hr />

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success mb-3" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }

            <form asp-action="RecuperarSenha" method="post">
                @Html.AntiForgeryToken()

                @if (Model.Validado)
                {
                    <input type="hidden" name="Validado" value="true" />
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                }

                @if (!Model.Validado)
                {
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" class="form-control" id="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Validar dados</button>
                    </div>
                }
                else
                {
                    <div class="form-group mb-3">
                        <label asp-for="NovaSenha" class="control-label">Nova senha</label>
                        <div class="password-container">
                            <input asp-for="NovaSenha" class="form-control" id="NovaSenhaInput" type="password" />
                            <i class="bi bi-eye-slash-fill toggle-password" id="toggleNovaSenha"></i>
                        </div>
                        <span asp-validation-for="NovaSenha" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmarSenha" class="control-label">Confirmar nova senha</label>
                        <div class="password-container">
                            <input asp-for="ConfirmarSenha" class="form-control" id="ConfirmaSenhaInput" type="password" />
                            <i class="bi bi-eye-slash-fill toggle-password" id="toggleConfirmaSenha"></i>
                        </div>
                        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">Salvar nova senha</button>
                    </div>
                }
            </form>

            <div class="text-center mt-3">
                <p class="text-muted">Lembrou sua senha? <a asp-controller="Account" asp-action="Login" class="text-primary">Voltar ao login</a>.</p>
            </div>
        </div>


        @* Coluna da Ilustração (Direita) *@
        <div class="col-lg-6 col-md-8 text-center d-none d-md-block">
            <img src="~/images/password-img.jpg" class="img-fluid rounded password-img" alt="Ilustração de recuperação de senha">
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CPF').mask('000.000.000-00');
        });
    </script>
     @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setupPasswordToggle('NovaSenhaInput', 'toggleNovaSenha');
            setupPasswordToggle('ConfirmaSenhaInput', 'toggleConfirmaSenha');
        });
    </script>
}
