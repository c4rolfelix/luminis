@model IEnumerable<Luminis.Models.Psicologo>
@{
    ViewData["Title"] = "Encontre seu Psicólogo - Luminis";
    var especialidades = ViewBag.Especialidades as List<Luminis.Models.Especialidade>;
    var currentSearchSpecialty = Context.Request.Query["searchSpecialty"].ToString();
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold">Encontre seu Psicólogo</h2>
    <p class="lead">Selecione uma abordagem clínica para encontrar o profissional ideal.</p>
    <hr />

    <form asp-controller="Psicologo" asp-action="Index" method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-12 col-md-8">
                <select name="searchSpecialty" class="form-select" aria-label="Selecione uma especialidade">
                    <option value="">Todas as abordagens</option>
                    @if (especialidades != null)
                    {
                        foreach (var esp in especialidades)
                        {
                            <option value="@esp.Nome" selected="@(esp.Nome == currentSearchSpecialty ? "selected" : null)">
                                @esp.Nome
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-4 d-grid gap-2 d-md-flex">
                <button type="submit" class="btn btn-primary flex-fill">Buscar</button>
                <a asp-controller="Psicologo" asp-action="Index" class="btn btn-secondary flex-fill">Limpar Filtro</a>
            </div>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var psicologo in Model)
            {
                var hasFoto = !string.IsNullOrEmpty(psicologo.FotoUrl);

                <div class="col">
                    <div class="card h-100 shadow-sm">

                        @* NOVO: Wrapper para foto circular com sombra e borda *@
                        <div class="profile-list-container">
                            @if (hasFoto)
                            {
                                <img src="@psicologo.FotoUrl"
                                     class="profile-avatar" alt="Foto de @psicologo.Nome"
                                     onerror="this.onerror=null;this.src='/images/default-avatar.png';" />
                            }
                            else
                            {
                                @* Placeholder com ícone de usuário *@
                                <div class="profile-list-placeholder">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                            }
                        </div>
                        @* FIM DO WRAPPER *@

                        <div class="card-body">
                            <h5 class="card-title">@psicologo.Nome @psicologo.Sobrenome</h5>
                            <p class="card-text"><small class="text-muted">CRP: @psicologo.CRP</small></p>
                            <small class="text-muted">Idade: @psicologo.GetIdade() anos</small>
                            <p class="card-text mt-2">
                                <strong>Abordagens:</strong>
                                @if (psicologo.Especialidades != null && psicologo.Especialidades.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1 mt-1">
                                        @foreach (var especialidade in psicologo.Especialidades)
                                        {
                                            <span class="badge rounded-pill bg-primary">@especialidade.Nome</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </p>
                            <a asp-controller="Psicologo" asp-action="Details" asp-route-id="@psicologo.Id" class="btn btn-sm btn-outline-primary mt-2">Ver Perfil</a>
                        </div>
                    </div>

                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Nenhum psicólogo encontrado com os critérios de busca.
        </div>
    }

    <div class="mt-4 text-center">
        <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none">
            <i class="bi bi-arrow-left"></i> Voltar para a página principal
        </a>
    </div>
</div>

@section Scripts {
    <style>
        /* WRAPPER: Define o círculo, a borda e a sombra no card de lista */
        .profile-list-container {
            width: 150px;
            height: 150px;
            /* Centraliza no topo do card */
            margin: 20px auto 10px auto;
            border-radius: 50%;
            overflow: hidden;
            /* Borda Branca e Sombra */
            border: 5px solid #fff;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.15);
        }

        /* IMAGEM: Garante o preenchimento sem distorção */
        .profile-avatar {
            width: 100%;
            height: 100%;
            object-fit: cover; /* ESSENCIAL para evitar distorção */
            display: block;
        }

        /* PLACEHOLDER: Estilo para o ícone cinza */
        .profile-list-placeholder {
            width: 100%;
            height: 100%;
            background-color: #e9ecef; /* Fundo cinza claro */
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d; /* Ícone cinza escuro */
            font-size: 80px;
        }
    </style>
}