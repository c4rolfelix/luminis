@model Luminis.Models.Psicologo
@{
    ViewData["Title"] = $"Perfil de {Model?.Nome} {Model?.Sobrenome}";
    var hasFoto = !string.IsNullOrEmpty(Model?.FotoUrl);
}

<div class="container my-5">
    <div class="row g-5">

        @* Coluna da Foto e Informações de Contato *@
        <div class="col-md-4 text-center">
            <div class="card shadow-sm h-100">
                <div class="card-body">

                    <div class="profile-detail-container mb-3">
                        @if (hasFoto)
                        {
                            <img src="@Model?.FotoUrl"
                                 class="profile-detail-avatar" alt="Foto de @Model?.Nome"
                                 onerror="this.onerror=null;this.src='/images/default-avatar.png';" />
                        }
                        else
                        {
                            <div class="profile-detail-placeholder">
                                <i class="bi bi-person-circle"></i>
                            </div>
                        }
                    </div>

                    <h3>@Model?.Nome @Model?.Sobrenome</h3>
                    <p class="text-muted mb-1">CRP: @Model?.CRP</p>
                    <p class="text-muted mb-3">Idade: @Model?.GetIdade() anos</p>

                    @if (!string.IsNullOrEmpty(Model?.WhatsAppUrl))
                    {
                        <a href="@Model?.WhatsAppUrl" target="_blank" class="btn btn-primary btn-sm mt-3">
                            <i class="bi bi-calendar-check me-2"></i> Agendar Agora
                        </a>
                    }
                    else
                    {
                        <p class="text-danger mt-3">Link de agendamento não disponível.</p>
                    }
                </div>
            </div>
        </div>

        @* Coluna da Biografia e Especialidades *@
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4>Sobre Mim</h4>
                    <p>
                        @(string.IsNullOrEmpty(Model?.Biografia) ? "O psicólogo ainda não adicionou uma biografia." : Model?.Biografia)
                    </p>

                    <h4 class="mt-4">Abordagens clínicas</h4>
                    @if (Model?.Especialidades != null && Model.Especialidades.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var especialidade in Model.Especialidades)
                            {
                                <span class="badge rounded-pill bg-primary">@especialidade.Nome</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p>Este psicólogo ainda não listou suas abordagens.</p>
                    }
                </div>
            </div>
        </div>
        <div class="mt-4 text-center">
            <a asp-controller="Psicologo" asp-action="Index" class="text-muted text-decoration-none">
                <i class="bi bi-arrow-left"></i> Voltar para a lista de psicólogos
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .profile-detail-container {
            max-width: 320px;
            max-height: 320px;
            width: 100%;
            padding-bottom: 100%;
            position: relative;
            margin: 0 auto;
            overflow: hidden;
            border-radius: 50%;
            border: 5px solid #fff;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .profile-detail-avatar,
        .profile-detail-placeholder {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .profile-detail-placeholder {
            background-color: #e9ecef;
            color: #6c757d;
            font-size: 10vw;
            max-font-size: 180px;
        }
    </style>
}